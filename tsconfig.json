{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"baseUrl": "packages",
		"paths": {
			"@tannin/*": [ "*/index.js" ],
			"tannin": [ "tannin/index.js" ]
		}
	},
	"include": [
		"packages"
	],
	"exclude": [
		"**/build",
		"**/dist",
		"**/__tests__",
		"**/benchmark",
		"node_modules"
	]
}
